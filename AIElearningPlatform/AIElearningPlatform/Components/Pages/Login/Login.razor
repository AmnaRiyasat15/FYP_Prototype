@page "/loginpage"

<style>
    /* Style for input placeholders */
    ::placeholder {
        color: white !important;
        opacity: 1; /* Ensures the color is fully opaque */
    }

    /* Style for input fields on focus */
    input:focus::placeholder {
        color: white !important;
        opacity: 1;
    }
</style>

<div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center" style="background-color: #13131a; color: white;">
    <div class="card text-center shadow-lg" style="width: 100%; max-height: 600px; max-width: 500px; background-color: #2c2c39; border-radius: 20px; border: none;">
        <div class="card-body">
            <!-- User Icon -->
            <div class="d-flex justify-content-center mb-4">
                <div style="background-color: rgba(255, 255, 255, 0.2); border-radius: 50%; width: 100px; height: 100px; display: flex; justify-content: center; align-items: center;">
                    <i class="bi bi-person-fill" style="font-size: 50px; color: rgba(255, 255, 255, 0.8);"></i>
                </div>
            </div>

            <!-- Form -->
            <form>
                <!-- Email Input -->
                <div class="form-group mb-4 position-relative">
                    <i class="bi bi-envelope-fill" style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%); color: rgba(255, 255, 255, 0.6);"></i>
                    <input type="email" class="form-control ps-5" placeholder="Email ID" style="background-color: transparent; color: white !important; border: none; border-bottom: 1px solid rgba(255, 255, 255, 0.6); border-radius: 0;" />
                </div>

                <!-- Password Input -->
                <div class="form-group mb-4 position-relative">
                    <i class="bi bi-lock-fill" style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%); color: rgba(255, 255, 255, 0.6);"></i>
                    <input type="password" class="form-control ps-5" placeholder="Password" style="background-color: transparent; color: white !important; border: none; border-bottom: 1px solid rgba(255, 255, 255, 0.6); border-radius: 0;" />
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="d-flex justify-content-between mb-4">
                    <div>
                        <input type="checkbox" class="form-check-input" id="rememberMe" />
                        <label for="rememberMe" class="form-check-label" style="color: rgba(255, 255, 255, 0.8);">Remember me</label>
                    </div>
                    <a href="/forgot-password" style="color: rgba(255, 255, 255, 0.6); text-decoration: none;">Forgot Password?</a>
                </div>

                <!-- Login Button -->
                <button type="button" class="btn w-100" style="background-color: #4e4e7e; color: white; border: none; padding: 10px; border-radius: 30px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2); font-weight: bold;">
                    LOGIN
                </button>
            </form>
        </div>
    </div>
</div>
