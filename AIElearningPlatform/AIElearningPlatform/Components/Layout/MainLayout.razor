@inherits LayoutComponentBase
<link href="css/MainLayout.css" rel="stylesheet" />

<div class="page">
    <!-- Removed NavMenu for a clean layout -->
    <main>
        <!-- Navbar -->
        <div class="navbar">
            <div class="logo">AI-e-LearningPlatform</div>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="/tutorial">Tutorial</a>
                <a href="/exercise-page">Exercises</a>
                <a href="/loginpage">Log in</a>
                <a href="/signup">Sign up</a>
                <a href="#" class="btn btn-primary">Start Free</a>
            </div>
        </div>

        <!-- Body Content -->
        @Body

        <!-- Chatbot Icon -->
        <div class="chatbot-icon-container">
            <div class="chatbot-icon" @onclick="NavigateToChatbot">
                <img src="Images/HomeImages/Chatbot-logo.png" alt="Chatbot" />
            </div>
        </div>


    </main>
</div>

<!-- Bootstrap and Icons -->
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
</head>



<div class="chatbot-icon-container">
    <div class="chatbot-icon" @onclick="NavigateToChatbot">
        <img src="Images/HomeImages/Chatbot-logo.png" alt="Chatbot" />
    </div>
</div>

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private void NavigateToChatbot()
    {
        Console.WriteLine("Chatbot icon clicked!"); // Debugging log
        NavigationManager.NavigateTo("/chatbot");
    }
}


<!-- Styling -->
<style>
    .page {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
        padding: 0;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        background-color: #13131a;
        color: white;
    }

    .nav-links a {
        color: white;
        margin-right: 15px;
        text-decoration: none;
        transition: color 0.3s;
    }

        .nav-links a:hover {
            color: #4e4e7e;
        }

    .nav-links .btn-primary {
        background-color: #4e4e7e;
        border: none;
        transition: background-color 0.3s;
    }

        .nav-links .btn-primary:hover {
            background-color: #3d3d63;
        }

    .chatbot-icon-container {
        position: fixed;
        bottom: 20px;
        left: 20px;
        z-index: 1000;
    }

    .chatbot-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: #4e4e7e;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease, background-color 0.3s;
    }

        .chatbot-icon img {
            width: 40px;
            height: 40px;
        }

        .chatbot-icon:hover {
            transform: scale(1.1);
            background-color: #3d3d63;
        }
</style>

